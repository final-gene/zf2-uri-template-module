{
    "name": "final-gene/uri-template-module",
    "description": "Build URI templates from ZF2 routes",
    "type": "library",
    "homepage": "https://github.com/final-gene/zf2-uri-template-module",
    "license": "MIT",
    "authors": [
        {
            "name": "Frank Giesecke",
            "email": "frank.giesecke@final-gene.de",
            "role": "Developer"
        },
        {
            "name":  "Pirmin Mattmann",
            "email": "pimattmann@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "zendframework/zend-config": "^3.3",
        "zendframework/zend-modulemanager": "^2.8",
        "zendframework/zend-servicemanager": "^3.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8",
        "zendframework/zend-filter": "^2.9",
        "zendframework/zend-form": "^2.14",
        "zendframework/zend-i18n": "^2.10",
        "zendframework/zend-inputfilter": "^2.10",
        "zendframework/zend-log": "^2.12",
        "zendframework/zend-serializer": "^2.9",
        "zendframework/zend-stdlib": "^3.1",
        "zendframework/zend-test": "^3.3",
        "zendframework/zend-validator": "^2.13",
        "final-gene/phing-commons": "^2.2"
    },
    "autoload": {
        "psr-4": {
            "FinalGene\\UriTemplateModule\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "FinalGene\\UriTemplateModuleTest\\": "tests/src"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "archive": {
        "exclude": [
            "/.*",
            "build.xml",
            "/composer.*",
            "/phpunit.*",
            "sonar-project.properties",
            "/tests"
        ]
    }
}
